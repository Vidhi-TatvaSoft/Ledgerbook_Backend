
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<body style="font-family: sans-serif; margin: 0; padding: 0;">

    <div class="container" style="  max-width: 100%; width: 100%; min-width: 320px; margin: 0 auto;">
        <!-- Start heading logo -->
        <div class="logo-container d-flex" style=" display: -webkit-box !important; margin-bottom: 20px;\ background-color: #126773; height: 80px;">
            <div class="business-name" style="text-align: left; margin-left: 2%; padding-top: 30px; color: white; font-size: large; font-weight: bold;">business-name</div>
            <div class="logo-image" style="  position: absolute; right: 2%;">
                <img src="/images/logo.jpg" alt="ledgerbook" class="logo" style="width: 40px; display: inline-block; vertical-align: middle; border-radius: 50%; color: white; right: 0px;" />
                <p class="logo-text" style="color: white; font-size: 25px; font-weight: 600; display: inline-block; vertical-align: middle;">Ledgerbook</p>
            </div>

        </div>

        <div class="text-center" style="text-align: center;">
            <div class="statement-name" style="text-align: center; font-size: 25px;">partyNmae Statement</div>
            <div class="text-cneter date-range" style="text-align: center;  margin-top: 10px; font-size: 18px;">(startDate - EndDate)</div>
        </div>

        <div class="credit-debit-balance-div" style="margin-top: 20px; margin-left: 4%; margin-right: 4%; border: 2px solid gray; border-radius: 5px; padding: 30px;">
            <table class="table-styling" style=" width: 100%;">
                <tbody>
                    <tr>
                        <td class="debit-td" style="text-align: start; font-size: 20px;">
                            <div>
                                <div>Total Debit (-)</div>
                                <div class="margin-left-debit margin-top" style=" margin-left: 12%; margin-top: 2%;">youGave</div>
                            </div>
                        </td>
                        <td class="credit-td border-table" style="text-align: center; font-size: 20px; border-left: 2px solid gray; border-right: 2px solid gray;">
                            <div>
                                <div>Total Credit (+)</div>
                                <div class="margin-top" style="margin-top: 2%;">YouGot</div>
                            </div>
                        </td>
                        <td class="balance-td" style="text-align: end; font-size: 20px;">
                            <div>
                                <div>Net Balance</div>
                                <div class="margin-right-net margin-top" style="margin-top: 2%;  margin-right: 12%;">NetBalance</div>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>

        <div class="entries-count" style=" padding: 30px; margin-left: 1.5%; padding-bottom: 0px;">No. of entries : TransactionsListCount (TimePeriod)
        </div>

        <div class="entries-table-div" style="padding: 30px; margin-left: 1.5%; margin-right: 1.5%;">
            <table class="table-entries borders" style="width: 100%; border-collapse: collapse; color: gray;  border: 2px solid gray; padding: 10px;">
                <thead class="">
                    <tr class="">
                        <th class="text-center borders" style="text-align: center;  border: 2px solid gray; padding: 10px; color: gray; background-color: rgb(252, 246, 240);">Date</th>
                        <th class="text-center borders" style="text-align: center;  border: 2px solid gray; padding: 10px; color: gray; background-color: rgb(252, 246, 240);">Name</th>
                        <th class="text-center borders" style="text-align: center;  border: 2px solid gray; padding: 10px; color: gray; background-color: rgb(252, 246, 240);">Details</th>
                        <th class="text-center borders" style="text-align: center;  border: 2px solid gray; padding: 10px; color: gray; background-color: rgb(252, 246, 240);">Debit(-)</th>
                        <th class="text-center borders" style="text-align: center;  border: 2px solid gray; padding: 10px; color: gray; background-color: rgb(252, 246, 240);">Credit(+)</th>
                    </tr>
                </thead>
                <tbody>
                    @* @if(Model.TransactionsList.Count != 0){
                    @foreach(TransactionEntryViewModel transaction in  Model.TransactionsList){
                        <tr>
                            <td class="text-center borders" style="text-align: center;  border: 2px solid gray; padding: 10px;">@transaction.CreateDate</td>
                            <td class="text-center borders" style="text-align: center;  border: 2px solid gray; padding: 10px;">@transaction.PartyName</td>
                            <td class="text-center borders" style="text-align: center;  border: 2px solid gray; padding: 10px;">@transaction.Description</td>
                            @if(transaction.TransactionType == (byte)EnumHelper.TransactionType.GAVE){
                                <td class="text-center borders bg-light" style="text-align: center;  border: 2px solid gray; padding: 10px; background-color: rgb(252, 240, 240); text-align: end;">@transaction.TransactionAmount</td>
                                <td class="text-center borders bg-success" style="background-color: rgb(218, 245, 238); text-align: end; text-align: center;  border: 2px solid gray; padding: 10px;">-</td>
                            }else{
                                 <td class="text-center borders bg-light" style="text-align: center;  border: 2px solid gray; padding: 10px; background-color: rgb(252, 240, 240); text-align: end;">-</td>
                                <td class="text-center borders bg-success"  style="background-color: rgb(218, 245, 238); text-align: end; text-align: center;  border: 2px solid gray; padding: 10px;">@transaction.TransactionAmount</td>
                            }
                            
                        </tr>
                    }
                    }else{
                        <tr>
                        <td colspan="5" class="text-center " style="font-size: 20px; padding: 10px; text-align: center;">
                            No entries found
                        </td>
                    </tr>
                    } *@
                   
                </tbody>
            </table>

            <table class="table-entries borders margin-top" style="margin-top: 2%; width: 100%; border-collapse: collapse; color: gray; border: 2px solid gray; padding: 10px;">
                <tbody>
                    <tr>
                        <td class="borders bg-gray text-center" style="background-color: rgb(252, 246, 240);text-align: center; border: 2px solid gray; padding: 10px;">Grand Total</td>
                        <td class="borders bg-light " style=" border: 2px solid gray; padding: 10px; background-color: rgb(252, 240, 240); text-align: end;">@Model.youGave</td>
                        <td class="borders bg-success" style=" border: 2px solid gray; padding: 10px; background-color: rgb(218, 245, 238); text-align: end;">@Model.YouGot</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</body>

</html>